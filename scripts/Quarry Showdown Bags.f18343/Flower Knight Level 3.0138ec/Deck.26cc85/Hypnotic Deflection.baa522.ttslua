function criticalWoundEffect()
	getVars()
	hasFencing = false
	for _, card in ipairs(zone.getObjects()) do
		if card.getName() == "Fencing" then
			hasFencing = true
		end
	end
	if hasFencing then
		Global.call('addBroadcast', {"crit", {gear = "You already have Fencing", effect = ""}})
	else
		Global.call('addBroadcast', {"crit", {gear = "You do not have Fencing ~ You may â‡¨ Breakthrough", effect = ""}})
	end
end

function getVars()
	card = getObjectFromGUID(Global.getTable("persistentCard").card.guid)
	local bool = card.getVar("isSurging_persistentCard")
	if bool then
		roller = getObjectFromGUID(Global.getTable("rollers").left.guid)
	end
	if not bool then
		roller = getObjectFromGUID(Global.getTable("rollers").right.guid)
	end

	grid = roller.getVar("grid")
	zone = grid.getVar("zonePlayer")

end

