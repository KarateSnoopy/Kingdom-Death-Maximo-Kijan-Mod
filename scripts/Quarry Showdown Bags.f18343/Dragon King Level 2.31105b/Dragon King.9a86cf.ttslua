function remove_overlay_unseenAgony()
	local btns = self.getButtons()
	if btns ~= nil then
		for i, v in pairs(btns) do
			if v ~= nil then
				if v.click_function == "remove_overlay_unseenAgony" then
					self.removeButton(v.index)
				end
			end
		end
	end
end

